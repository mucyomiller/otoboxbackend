<% include ./partials/header  %>
<% include ./partials/sidebar  %>
<div class="page-content">
<div class="container-fluid">
<% if(typeof query !== 'undefined' && query == "new") { %>
<header class="section-header">
<div class="tbl">
<div class="tbl-row">
	<div class="tbl-cell">
		<h3>Add New Model</h3>
		<ol class="breadcrumb breadcrumb-simple">
			<li><a href="/">Dashboard</a></li>
			<li><a href="/model">Models</a></li>
			<li class="active">Add</li>
		</ol>
	</div>
</div>
</div>
</header>

<div class="box-typical box-typical-padding">
<h5 class="m-t-lg with-border">Model infos</h5>
<form action="/model/add" method="post" enctype="multipart/form-data">
<div class="row">
<div class="col-md-6 col-sm-6">
	<fieldset class="form-group">
		<label class="form-label semibold" for="brandid">Choose Brand</label>
		<select  name="brandid" class="form-control">
		<% Brands.forEach((brand)=>{
		%>
		 <option value="<%= brand.id %>"><%= brand.get("name") %></option>
		<%
		});
		%>
        </select>
	</fieldset>
</div>
</div>
<div class="row">
<div class="col-lg-6">
	<fieldset class="form-group">
		<label class="form-label semibold" for="modelname">Model Name:</label>
		<input type="text" name="modelname" class="form-control" id="modelname" placeholder="Enter Model Name">
	</fieldset>
</div>
<div class="col-lg-6">
	<fieldset class="form-group">
		<label class="form-label semibold" for="modelyear">Model Year:</label>
		<input type="text" name="modelyear" class="form-control" id="modelyear" placeholder="Enter Realise Year">
	</fieldset>
</div>
</div><!--.row-->
<div class="row">
<div class="col-xs-6">
	<label class="form-label semibold" for="modelpic">Add Model Picture</label>
	<input type="file" name="modelpic" class="form-control" >
</div>
</div><!--.row-->
<div class="row">
<br>
<div class="col-lg-6">
<input type="submit"  name="save" class="btn btn-rounded  btn-primary-outline" value="save model"/>
</div>
</div>
</form>
</div><!--.row-->
</div><!--.box-typical-->
<% } else { %>
<section class="card">
<header class="card-header card-header-lg">
All Models <a href="/model?action=new" class="btn btn-rounded  btn-success-outline pull-right">Add new Model</a>
</header>
<div class="card-block">
<p class="card-text">
<div class="row">
<table id="table-edit" class="table table-bordered table-hover table-responsive">
<thead>
<tr>
<th width="1">Model Id#</th>
<th>Name</th>
<th>Release Year</th>
<th>Thumbnail url</th>
<th>Brand</th>
<th width="120">Updated_at</th>
<th width="120">Created_at</th>
</tr>
</thead>
<tbody>
<% Models.forEach((model)=>{
	%>
		<tr>
		<td><%= model.id  %></td>
		<td><%= model.get("name")  %></td>
		<td><%= model.get("released")  %></td>
		<td><%= model.get("url") %></td>
		<td><%= model.get("parent").get("name")  %></td>
		<td class="table-date"><%= model.createdAt  %></td>
		<td class="table-date"><%= model.updatedAt  %></td>
		</tr>
<%
}) %>
</tbody>
</table>
</div>
</p>
</div>
</section>
<% } %>
</div><!--.container-fluid-->
</div><!--.page-content-->
<% include ./partials/footer  %>
