<% include ./partials/header  %>
<% include ./partials/sidebar  %>
<div class="page-content">
<div class="container-fluid">
<% if(typeof query !== 'undefined' && query == "new") { %>
<header class="section-header">
<div class="tbl">
<div class="tbl-row">
	<div class="tbl-cell">
		<h3>Add New Category</h3>
		<ol class="breadcrumb breadcrumb-simple">
			<li><a href="/">Dashboard</a></li>
			<li><a href="/category">Categories</a></li>
			<li class="active">Add</li>
		</ol>
	</div>
</div>
</div>
</header>

<div class="box-typical box-typical-padding">
<h5 class="m-t-lg with-border">Categories infos</h5>
<form action="/category/add" method="post">
<div class="row">
<div class="col-lg-6">
	<fieldset class="form-group">
		<label class="form-label semibold" for="categoryname">Category Name:</label>
		<input type="text" name="categoryname" class="form-control" id="categoryname" placeholder="Enter Category Name">
	</fieldset>
</div>
<div class="col-lg-6">
	<fieldset class="form-group">
		<label class="form-label semibold" for="order">Order:</label>
		<input type="text" name="order" class="form-control" id="order" placeholder="Enter Order No">
	</fieldset>
</div>
</div><!--.row-->
<div class="row">
<br>
<div class="col-lg-6">
<input type="submit"  name="save" class="btn btn-rounded  btn-primary-outline" value="save Category"/>
</div>
</div>
</form>
</div><!--.row-->
</div><!--.box-typical-->
<% } else { %>
<section class="card">
<header class="card-header card-header-lg">
All Categories(<span class="label label-custom label-pill label-info"><%= Categories.length %></span>) <a href="/category?action=new" class="btn btn-rounded  btn-success-outline pull-right">Add new Category</a>
</header>
<div class="card-block">
<p class="card-text">
<div class="row">
<table id="table-edit" class="table table-bordered table-hover">
<thead>
<tr>
<th width="1">No#</th>
<th>Name</th>
<th>Order</th>
<th width="120">Edit</th>
</tr>
</thead>
<tbody>
<% var i = 1; Categories.forEach((category)=>{
	%>
		<tr>
		<td><%= i++  %></td>
		<td><%= category.get("name")  %></td>
		<td><%= category.get("order")  %></td>
		<td class="table-date"><a href="#">edit</a></td>
		</tr>
<%
}) %>
</tbody>
</table>
</div>
</p>
</div>
</section>
<% } %>
</div><!--.container-fluid-->
</div><!--.page-content-->
<% include ./partials/footer  %>
