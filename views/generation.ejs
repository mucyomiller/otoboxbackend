<% include ./partials/header  %>
<% include ./partials/sidebar  %>
<div class="page-content">
<div class="container-fluid">
<% if(typeof query !== 'undefined' && query == "new") { %>
<header class="section-header">
<div class="tbl">
<div class="tbl-row">
	<div class="tbl-cell">
		<h3>Add New Generation</h3>
		<ol class="breadcrumb breadcrumb-simple">
			<li><a href="/">Dashboard</a></li>
			<li><a href="/brand">Brands</a></li>
			<li><a href="/model">Models</a></li>
			<li><a href="#">Generations</a></li>
			<li class="active">Add</li>
		</ol>
	</div>
</div>
</div>
</header>

<div class="box-typical box-typical-padding">
<h5 class="m-t-lg with-border">Generation infos</h5>
<form action="/generation/add" method="post" enctype="multipart/form-data">
<div class="row">
<div class="col-md-6 col-sm-6">
<input type="hidden"  name="modelid" value="<%= Model.id %>" />
<fieldset class="form-group">
		<label class="form-label semibold" for="modelname">Generation Name:</label>
		<input type="text" name="generationname" class="form-control" id="generationname" placeholder="Enter Generation Name">
	</fieldset>
</div>
</div><!--.row-->
<div class="row">
<div class="col-md-6 col-sm-6">
<fieldset class="form-group">
		<label class="form-label semibold" for="modelname">Released Year:</label>
		<input type="text" name="released" class="form-control" id="released" placeholder="Enter Released Year">
	</fieldset>
</div>
</div><!--.row-->
<div class="row">
<div class="col-xs-6">
	<label class="form-label semibold" for="modelpic">Add Generation Thumbnail(Optional)</label>
	<input type="file" name="generationpic" class="form-control" >
</div>
</div><!--.row-->
<div class="row">
<br>
<div class="col-lg-6">
<input type="submit"  name="save" class="btn btn-rounded  btn-primary-outline" value="add new generation"/>
</div>
</div>
</form>
</div><!--.row-->
</div><!--.box-typical-->
<% } else if(typeof query !== 'undefined' && query == "edit") { %>
<header class="section-header">
<div class="tbl">
<div class="tbl-row">
	<div class="tbl-cell">
		<h3>Edit Generation</h3>
		<ol class="breadcrumb breadcrumb-simple">
			<li><a href="/">Dashboard</a></li>
			<li><a href="/generation">Generation</a></li>
			<li class="active">Edit</li>
		</ol>
	</div>
</div>
</div>
</header> 

<div class="box-typical box-typical-padding">
<h5 class="m-t-lg with-border"> Generation infos</h5>
<form action="/generation/edit/<%= Generation.id %>" method="post" enctype="multipart/form-data">
<div class="row">
<div class="col-md-6 col-sm-6">
<fieldset class="form-group">
		<label class="form-label semibold" for="modelname">Generation Name:</label>
		<input type="text" name="generationname" class="form-control" value="<%= Generation.get("name") %>" id="generationname" placeholder="Enter Generation Name">
	</fieldset>
</div>
</div><!--.row-->
<div class="row">
<div class="col-md-6 col-sm-6">
<fieldset class="form-group">
		<label class="form-label semibold" for="modelname">Released Year:</label>
		<input type="text" name="released" class="form-control" value="<%= Generation.get("released") %>" id="generationname" placeholder="Enter Released Year">
	</fieldset>
</div>
</div><!--.row-->
<div class="row">
<div class="col-xs-6">
	<label class="form-label semibold" for="modelpic">Add Generation logo</label>
	<input type="file" name="generationpic"  class="form-control" >
</div>
</div><!--.row-->
<div class="row">
<br>
<div class="col-lg-6">
<input type="submit"  name="save" class="btn btn-rounded  btn-primary-outline" value="update brand"/>
</div>
</div>
</form>
</div><!--.row-->
</div><!--.box-typical-->
<% } else { %>
<section class="card">
<header class="card-header card-header-lg">
All Generation(<span class="label label-custom label-pill label-info"><%= Generations.length %></span>) <a href="/generation/<%= Model.id %>?action=new" class="btn btn-rounded  btn-success-outline pull-right">Add new Generation</a>
</header>
<div class="card-block">
<p class="card-text">
<div class="row">
<table id="table-edit" class="table table-bordered table-hover">
<thead>
<tr>
<th>Generation Name</th>
<th>Released Year</th>
<th>Image</th>
<th width="120">Edit</th>
<th width="120">Delete</th>
</tr>
</thead>
<tbody>
<% Generations.forEach((gen) => {
%>
<tr>
<td><%= gen.get("name") %></td>
<td><%= gen.get("released") %></td>
<td><img src="/<%= gen.get("url") %>" width="100" height="100" /></td>
<td class="table-date"><a href="/generation/edit/<%= gen.id %>?action=edit">edit</a></td>
<td class="table-date"><a href="/generation/remove/<%= gen.id %>">delete</a></td>
</tr>
<% }); %>
</tbody>
</table>
</div>
</p>
</div>
</section>
<% } %>
</div><!--.container-fluid-->
</div><!--.page-content-->
<% include ./partials/footer  %>
